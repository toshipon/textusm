{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "allowJs": true, // Add this line
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
   "exclude": ["node_modules", ".vscode-test", "dist", "out"], // Exclude build output directories
   "include": ["src/**/*"] // Explicitly include only files under src
 }
